<?xml version="1.0"?>
<ruleset name="Yii2 Project PHPCS Standards">
    <description>Правила кодирования PHP для Yii2 проекта с панелью мониторинга серверов</description>

    <!-- Используем Yii2 стандарты кодирования -->
    <rule ref="Yii2"/>

    <!-- Добавляем правила для форматирования массивов -->
    <rule ref="Generic.Arrays.ArrayIndent"/>

    <!-- Исключения для vendor директории -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/runtime/*</exclude-pattern>
    <exclude-pattern>*/web/assets/*</exclude-pattern>
    <exclude-pattern>*/tests/_output/*</exclude-pattern>
    <exclude-pattern>*/tests/_log/*</exclude-pattern>
    <exclude-pattern>*/environments/*</exclude-pattern>
    <exclude-pattern>*/migrations/*</exclude-pattern>

    <!-- Включаем проверку следующих директорий -->
    <file>backend</file>
    <file>frontend</file>
    <file>common</file>
    <file>console</file>

    <!-- Исключаем конфигурационные файлы -->
    <exclude-pattern>*/config/*</exclude-pattern>
    <exclude-pattern>*/web/index.php</exclude-pattern>
    <exclude-pattern>*/yii</exclude-pattern>
    <exclude-pattern>*/yii_test</exclude-pattern>
    <exclude-pattern>*/yii.bat</exclude-pattern>

    <!-- Настройки отчета -->
    <arg name="colors"/>
    <arg name="parallel" value="80"/>
    <arg value="p"/>
</ruleset>