// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run PHPStan",
            "type": "shell",
            "command": "vendor/bin/phpstan analyse --error-format raw",
            "group": "build",
            "problemMatcher": {
                "owner": "phpstan",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^\\s*(.*):(\\d+):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        }
    ]
}